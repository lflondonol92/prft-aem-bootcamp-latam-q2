<?xml version="1.0" encoding="UTF-8"?>
<jcr:root 
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" 
        jcr:title="Sample Component"
	sling:resourceType="cq/gui/components/authoring/dialog">

	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/tabs"
				maximized="{Boolean}false">
				<items jcr:primaryType="nt:unstructured">

					<!-- add dialog tab -->

                <logo jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        jcr:title="Logo"
                        maximized="{Boolean}false">
                    <items jcr:primaryType="nt:unstructured">
                        <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/libs/core/wcm/components/image/v2/image/cq:dialog/content/items/tabs"/>
                    </items>
                </logo>

                <navigation jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        jcr:title="Navigation"
                        maximized="{Boolean}false">
                    <items jcr:primaryType="nt:unstructured">
                        <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="//libs/core/wcm/components/navigation/v1/navigation/cq:dialog/content/items/tabs"/>
                    </items>
                </navigation>
                <text jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        jcr:title="Text"
                        maximized="{Boolean}false">
                    <items jcr:primaryType="nt:unstructured">
                        <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/libs/core/wcm/components/text/v1/text/cq:dialog/content/items/tabs"/>
                    </items>
                </text>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>