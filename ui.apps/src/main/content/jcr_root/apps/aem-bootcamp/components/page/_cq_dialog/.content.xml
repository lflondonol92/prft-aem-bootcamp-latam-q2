<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v2.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,aembootcamp.opengraph]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v2"
    mode="edit"
    trackingFeature="core-components:page:v2">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <aem-bootcamp
                        jcr:primaryType="nt:unstructured"
                        jcr:title="AEM Bootcamp"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <migration
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Migration"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <legacy-path
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Legacy Path">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./columns">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <path
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="This is old URL of the page being authored and will be used while migration."
                                                            fieldLabel="Path"
                                                            name="./path" />
                                                    </items>
                                                </field>
                                            </legacy-path>
                                        </items>
                                    </migration>
                                    <navigation
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Navigation"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <show-in-navigation
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="If this page has to appear in the Top navigation, this checkbox has be selected."
                                                name="./isShowInNavigation"
                                                text="Show in Top Navigation" />
                                        </items>
                                    </navigation>
                                </items>
                            </column>
                        </items>
                    </aem-bootcamp>
                    <open-graph
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Open Graph"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ogtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="'og:title' content"
                                                name="./ogtitle" />
                                            <ogdescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="'og:description' content"
                                                name="./ogdescription" />
                                            <ogtype
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldLabel="'og:type' content"
                                                name="./ogtype">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="acs-commons/components/utilities/genericlist/datasource"
                                                    path="/etc/acs-commons/lists/open-graph/type" />
                                            </ogtype>
                                            <ogimage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="'og:image' content"
                                                nodeTypes="dam:Asset"
                                                name="./ogimage"
                                                rootPath="/content/dam" />
                                            <twittercard
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldLabel="'og:twittercad' content"
                                                name="./twittercard">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="acs-commons/components/utilities/genericlist/datasource"
                                                    path="/etc/acs-commons/lists/open-graph/twitter-card" />
                                            </twittercard>
                                        </items>
                                    </tags>
                                </items>
                            </column>
                        </items>
                    </open-graph>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>